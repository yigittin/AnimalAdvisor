@model IEnumerable<AnimalAdvisor.Models.Species>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Header-->
<header class="py-5">
    <div class="container px-lg-5">
        <div class="p-4 p-lg-5 bg-light rounded-3 text-center">
            <div class="m-4 m-lg-5">
                <h1 class="display-5 fw-bold">A warm welcome!</h1>
                <p class="fs-4">Bootstrap utility classes are used to create this jumbotron since the old component has been removed from the framework. Why create custom CSS when you can use utilities?</p>
                <a class="btn btn-primary btn-lg" href="#!">Call to action</a>
            </div>
        </div>
    </div>
</header>


    <!-- Page Content-->
    <section class="pt-4">
        <div class="container px-lg-5">
            <!-- Page Features-->

            <div class="row gx-xl-6 h-100 d-lg-flex card-group" >
                <form asp-action="Index" method="post" asp-controller="AnimalPage">
                @foreach(var item in Model)
                    {
                    <div class="col-sm-4 mb-5 d-inline-block">
                        <div class="card bg-light border-0  " >
                            <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
                                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-4 mt-n4"><i class="bi bi-collection"></i></div>
                                <h2 id="animalId" class="fs-4 fw-bold">@(item.SpeciesName)</h2>
                                <img class="card-img-top" style="height:20rem" src="@item.SpeciesPhoto" alt="Alternate Text" />
                                <input id="AnimalPage" type="text" asp-route-id="" asp-for="@(item.Id)" class="form-control invisible" value="@(item.Id)" />
                                
                                <a class="btn btn-primary" asp-action="Animals" asp-route-id="@item.Id">Go To List</a>
                            </div>
                        </div>
                    </div>
                }
                </form>
            </div>
        </div>
    </section>

