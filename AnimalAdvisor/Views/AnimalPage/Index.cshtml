@model IEnumerable<AnimalAdvisor.Models.Animal>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AnimalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalLenght)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalPhoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalLenght)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalPhoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
